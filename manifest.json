{
  "manifest_version": 3,
  "name": "YouTube Overlay Player",
  "version": "2.5",
  "description": "Overlays YouTube videos with a cookie-free player and allows dismissal",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}